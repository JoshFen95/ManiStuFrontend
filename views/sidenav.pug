doctype html
head
  meta(name='viewport' content='width=device-width, initial-scale=1')
  style.

    .sidenav {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 4;
    top: 0;
    left: 0;
    background-color: #111;
    overflow-x: hidden;
    transition: 0.5s;
    padding-top: 60px;
    }
    .sidenav a {
    padding: 8px 8px 8px 32px;
    text-decoration: none;
    font-size: 25px;
    color: #818181;
    display: block;
    transition: 0.3s;
    }
    .sidenav a:hover {
    color: #53e3a6;
    }
    .sidenav .closebtn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 36px;
    margin-left: 50px;
    }
    @media screen and (max-height: 450px) {
    .sidenav {padding-top: 15px;}
    .sidenav a {font-size: 18px;}
    }
    .navPic {
        width: 250px;
        height: 250px;
    }

    button.search {
        
        width: 200px;
        height: 40px;
    }
    .inputSearch{
        width: 200px;
    }
    .searchForm{
        padding: 25px 25px;
    }
    
#mySidenav.sidenav
  a.closebtn(href='javascript:void(0)' onclick='closeNav()') &times;
  a(href='/home') Home
  a(href='#') About
  a(href='#') PlaceHolder
  a(href='#') Contact
  form.searchForm
    input.inputSearch(type="text")
    button.search Search
span(style='font-size:30px;cursor:pointer;' onclick='openNav()') &#x2630; ManiStu
script.
  function openNav() {
  document.getElementById("mySidenav").style.width = "250px";
  }
  function closeNav() {
  document.getElementById("mySidenav").style.width = "0";
  }
